<UserControl x:Class="PDFSignerApp.PDFVerifyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDFSignerApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Select PDF -->
            <Button Grid.Row="1" 
            Grid.ColumnSpan="2" 
            Margin="10"
            VerticalAlignment="Center" 
            Content="Select PDF file"
            Width="144" 
            Padding="12 6" 
            FontSize="14"
            Command="{Binding SelectPDFCommand}"
    />

            <!-- Info selected PDF -->
            <Label Content="Selected PDF file" 
           Grid.Row="2" 
           Grid.Column="0" 
           Margin="10"
           HorizontalAlignment="Right"
           VerticalAlignment="Center"
           />
            <TextBox Grid.Row="2" 
             Grid.Column="1" 
             Margin="10"
             VerticalAlignment="Center" 
             IsReadOnly="True" BorderThickness="0"
             HorizontalContentAlignment="Left"
             HorizontalAlignment="Left"
             Text="{Binding PDFPath}"/>

            <!-- Info key -->
            <Label Content="Public key info" 
           Grid.Row="3" 
           Grid.Column="0" 
           Margin="10"
           HorizontalAlignment="Right"
           VerticalAlignment="Center"
           />
            <TextBox Grid.Row="3" 
             Grid.Column="1" 
             Margin="10"
             VerticalAlignment="Center" 
             IsReadOnly="True" BorderThickness="0"
             HorizontalContentAlignment="Left"
             HorizontalAlignment="Left"
             Text="{Binding PublicKeyPath}"/>

            <!-- Sign button -->
            <Button Content="Verify PDF signature" 
            Grid.ColumnSpan="2" 
            Grid.Row="4" 
            FontSize="14"
            Padding="12 6"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Command="{Binding VerifyPDFCommand}"
            />

            <!-- Message -->

            <TextBox x:Name="MsgTextBox"
             Grid.Row="5"
             Grid.ColumnSpan="2" 
             Margin="10"
             VerticalAlignment="Center" 
             Width="400"
             HorizontalContentAlignment="Center"
             HorizontalAlignment="Center" 
             IsReadOnly="True" 
             BorderThickness="0"
             FontSize="14" 
             FontWeight="Bold"
             Text="{Binding Message}"/>
            
        </Grid>
</UserControl>
